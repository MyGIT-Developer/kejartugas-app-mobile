{
    "expo": {
        "name": "Kejar Tugas",
        "slug": "kejar-tugas",
        "version": "1.1.1",
        "orientation": "portrait",
        "icon": "./assets/images/kt-512.png",
        "userInterfaceStyle": "light",
        "splash": {
            "image": "./assets/images/kt-512.png",
            "resizeMode": "contain",
            "backgroundColor": "#ffffff"
        },
        "notification": {
            "icon": "./assets/images/kt-512.png",
            "color": "#0E509E",
            "iosDisplayInForeground": true,
            "androidMode": "default",
            "androidCollapsedTitle": "New Notification"
        },
        "updates": {
            "fallbackToCacheTimeout": 0,
            "enabled": true
        },
        "assetBundlePatterns": ["assets/fonts/*", "assets/images/*", "assets/icon/*", "assets/animations/*"],
        "ios": {
            "supportsTablet": true,
            "bundleIdentifier": "com.innovation.kejartugas",
            "jsEngine": "hermes",
            "infoPlist": {
                "NSCameraUsageDescription": "Aplikasi ini memerlukan akses kamera untuk mengambil foto.",
                "NSLocationWhenInUseUsageDescription": "This app needs access to location when open.",
                "NSLocationAlwaysUsageDescription": "This app needs access to location when in the background.",
                "NSLocationAlwaysAndWhenInUseUsageDescription": "This app needs access to location when open and in the background.",
                "UIBackgroundModes": ["remote-notification"]
            }
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/images/kt-512.png",
                "backgroundColor": "#FFFFFF"
            },
            "package": "com.innovation.kejartugas",
            "permissions": [
                "CAMERA",
                "READ_EXTERNAL_STORAGE",
                "WRITE_EXTERNAL_STORAGE",
                "ACCESS_FINE_LOCATION",
                "ACCESS_COARSE_LOCATION",
                "ACCESS_NETWORK_STATE",
                "INTERNET",
                "android.permission.ACCESS_COARSE_LOCATION",
                "android.permission.ACCESS_FINE_LOCATION",
                "NOTIFICATIONS"
            ]
        },
        "plugins": [
            "expo-font",
            [
                "expo-location",
                {
                    "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location."
                }
            ],
            [
                "expo-notifications",
                {
                    "icon": "./assets/images/kt-512.png",
                    "color": "#0E509E",
                    "mode": "production"
                }
            ],
            [
                "expo-build-properties",
                {
                    "android": {
                        "enableProguardInReleaseBuilds": true,
                        "minSdkVersion": 24,
                        "compileSdkVersion": 35,
                        "targetSdkVersion": 35,
                        "extraProguardRules": "-keep class com.facebook.hermes.** { *; }\n-keepclassmembers class * { @android.webkit.JavascriptInterface <methods>; }"
                    },
                    "ios": {
                        "useHermes": true
                    }
                }
            ]
        ],
        "extra": {
            "eas": {
                "projectId": "06f3558f-88d4-41ad-912e-a6ad9abeea7e"
            }
        }
    }
}
